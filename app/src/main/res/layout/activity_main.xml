<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/media"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/light_mode_"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/lightTheme"
        android:orientation="vertical"
        tools:context=".MainActivity">


        <LinearLayout
            android:id="@+id/headerMedia"
            android:layout_width="match_parent"
            android:layout_height="@dimen/header_height"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mainName"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/fourteenthDP"
                android:layout_gravity="start"
                android:layout_marginStart="@dimen/sixteenDP"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="bold"
                android:translationX="0dp"
                android:translationY="10dp"
                tools:ignore="VisualLintBounds" />
        </LinearLayout>

        <Button
            android:id="@+id/button3"
            style="@style/Widget.Material3.Button"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:layout_marginLeft="@dimen/sixteenDP"
            android:layout_marginRight="@dimen/sixteenDP"
            android:backgroundTint="#FFFFFF"
            android:fontFamily="@font/ys_display_regular"
            android:text="@string/search"
            android:textColor="@color/lightTheme"
            android:textSize="22sp"
            app:cornerRadius="16dp"
            app:icon="@drawable/search"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:iconSize="24dp"
            app:iconTint="@color/lightTheme"
            app:iconTintMode="src_in"
            app:rippleColor="@color/black"
            tools:ignore="MissingConstraints,VisualLintButtonSize"
            tools:layout_editor_absoluteX="108dp"
            tools:layout_editor_absoluteY="64dp" />

        <Button
            android:id="@+id/button2"
            style="@style/Widget.Material3.Button"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:layout_marginLeft="@dimen/sixteenDP"
            android:layout_marginRight="@dimen/sixteenDP"
            android:backgroundTint="#FFFFFF"
            android:fontFamily="@font/ys_display_regular"
            android:text="@string/media"
            android:textColor="@color/lightTheme"
            android:textSize="22sp"
            app:cornerRadius="@dimen/sixteenDP"
            app:icon="@drawable/media"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:iconSize="24dp"
            app:iconTint="@color/lightTheme"
            app:iconTintMode="src_in"
            tools:ignore="MissingConstraints,VisualLintButtonSize"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="282dp" />

        <Button
            android:id="@+id/button"
            style="@style/Widget.Material3.Button"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:layout_marginLeft="@dimen/sixteenDP"
            android:layout_marginRight="@dimen/sixteenDP"
            android:backgroundTint="#FFFFFF"
            android:fontFamily="@font/ys_display_regular"
            android:text="@string/settings"
            android:textColor="@color/lightTheme"
            android:textSize="22sp"
            app:cornerRadius="16dp"
            app:icon="@drawable/settings"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:iconSize="24dp"
            app:iconTint="@color/lightTheme"
            app:iconTintMode="src_in"
            tools:ignore="MissingConstraints,VisualLintButtonSize"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="505dp" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>